@page
@model UserApp.Web.Pages.UserModel

<h2>Crear Usuario</h2>

<form method="post">
    <div>
        <label>Nombre</label>
        <input asp-for="User.Name" required />
    </div>
    <div>
        <label>Fecha de nacimiento</label>
        <input asp-for="User.BirthDate" type="date" required />
    </div>
    <div>
        <label>Género</label>
        <select asp-for="User.Gender" required>
            <option value="M">Masculino</option>
            <option value="F">Femenino</option>
        </select>
    </div>
    <button type="submit">Registrar</button>
</form>

@if (Model.Message != null)
{
    <p>@Model.Message</p>
}